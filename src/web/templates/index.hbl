<!doctype html>
<html>

<head>
    <title>Nevermore FMS</title>
    <meta name="description" content="The Home Page of the Nevermore FMS.">
    <meta name="keywords" content="first fms frc robots robotics">
    <link rel="stylesheet" href="/static/css/main.min.css" />
    <link rel="stylesheet" href="/static/css/normalize.min.css" />
    <link rel="icon" type="image/x-icon" href="/static/logos/eao_bird_circle.png">
    <style>
        .topbar {
            position: block;
            width: 100%;
            height: 100px;
            background-color: #4F5B62;
        }
        
        .logo {
            float: left;
            padding-left: 10px;
            padding-top: 10px;
        }
        
        .select-size {
            height: 30px;
            width: 300px;
        }
        
        .select-head {
            background-color: white;
            margin-top: 15px;
        }
        
        .background {
            background: linear-gradient(180deg, #4F5B62 12.89%, #263238 72.43%, rgba(154, 0, 7, 0.93) 120.46%);
        }
        
        .interface {
            display: block;
            padding-top: 100px;
        }
        
        .header-text {
            color: white;
            text-align: center;
        }
        
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }
    </style>
</head>

<body class="background">
    <div class="topbar">
        <img class="logo" src="/static/logos/eao_bird_circle.png" width="82px" height="78px" />
        <div class="select-effect select-size">
            <select class="select select-head">
                {{ #if pluins.length}}
                <option value="" selected="" disabled="">&lt;Select a Plugin&gt;</option>
                {{ #each plugins }}
                <option value="{{ this.id }}">{{this.name}}</option>
                {{/each}}
                {{else}}
                <option value="" selected="" disabled="">&lt;No Plugins Available&gt;</option>
                {{/if}}
            </select>
            <label>Select</label>
        </div>
        <div class="container interface">
            <h1 class="header-text">You when no plugins are installed :( {{ plugin_token }}</h1>
            <img class="center" src="/static/logos/monkey-banana.gif" />
        </div>
    </div>
</body>

</html>